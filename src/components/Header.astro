---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-10 z-50 flex justify-center bg-zinc-300 py-2 rounded-full m-10 max-w-4xl mx-auto backdrop-blur-sm bg-opacity-90">
  <nav class="grid grid-cols-3 items-center w-full max-w-3xl">
    <a href="/" class="justify-self-start flex items-center gap-2">
	  <img
		src="/ikigai2.png"
		alt="ikigai-logo"
		class="w-5 h-auto flex-shrink-0"
	  />
      <h2 class="text-base font-semibold pt-2 text-zinc-900">
        {SITE_TITLE}
      </h2>
    </a>
    <div class="flex justify-center rounded-full gap-4">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
