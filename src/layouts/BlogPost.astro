---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

import "../styles/global.css";

type Props = CollectionEntry<'blog'>['data'];

const {
  title,
  description,
  pubDate,
  updatedDate,
  heroImage,
  country,
  continent
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>

  <body class="bg-white text-black">
    <Header />
    <main class="w-[calc(100%-2em)] max-w-full mx-auto">
      <article>
        <!-- Imagen principal -->
        <div class="w-full">
          {heroImage && (
            <img
              width={1020}
              height={510}
              src={heroImage}
              alt=""
              class="block mx-auto rounded-xl shadow-md"
            />
          )}
        </div>

        <!-- Contenido del post -->
        <div class="max-w-3xl w-full mx-auto px-4 py-6 text-gray-700">
          <div class="text-center mb-8 pt-4">
            <!-- Fechas -->
            <div class="text-sm text-gray-500 mb-2">
              <FormattedDate date={pubDate} />
              {
                updatedDate && (
                  <div class="italic">
                    Last updated on <FormattedDate date={updatedDate} />
                  </div>
                )
              }
            </div>
            <h1 class="text-3xl sm:text-4xl font-bold mb-2">{title}</h1>
            <hr class="border-t border-gray-300 mt-4" />
          </div>
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
